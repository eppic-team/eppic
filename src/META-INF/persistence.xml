<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="crkjpa">
		<description>Persistence unit for the CRK application</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>ch.systemsx.sybit.crkwebui.server.db.model.IPForbidden</class>
		<class>ch.systemsx.sybit.crkwebui.server.db.model.IPAllowed</class>
		 
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" /> 
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/crk" /> 
			<property name="javax.persistence.jdbc.user" value="root" /> 
			<property name="javax.persistence.jdbc.password" value="" /> 
			<property name="hibernate.show_sql" value="false" /> 
			<property name="hibernate.hbm2ddl.auto" value="update" /> 
			
			<property name="hibernate.c3p0.min_size" value="5" /> 
			<property name="hibernate.c3p0.max_size" value="20" /> 
			<property name="hibernate.c3p0.timeout" value="1800" /> 
			<property name="hibernate.c3p0.max_statements" value="50" /> 
		</properties>
	</persistence-unit>
</persistence>