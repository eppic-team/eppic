<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="eppicjpa">
		<description>Persistence unit for the EPPIC WUI application</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java:comp/env/jdbc/eppicDB</non-jta-data-source>
		<class>ch.systemsx.sybit.crkwebui.server.db.model.IPForbidden</class>
		<class>ch.systemsx.sybit.crkwebui.server.db.model.IPAllowed</class>
		<class>ch.systemsx.sybit.crkwebui.server.db.model.DataDownloadTracking</class>
		<validation-mode>NONE</validation-mode> 
		<properties>
			<property name="hibernate.show_sql" value="false" /> 
			<property name="hibernate.hbm2ddl.auto" value="update" /> 
		</properties>
	</persistence-unit>

	<persistence-unit name="eppic-offline-jpa">
		<description>Persistence unit for the EPPIC WUI application - offline backup database</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java:comp/env/jdbc/eppicOfflineDB</non-jta-data-source>
		<class>ch.systemsx.sybit.crkwebui.server.db.model.IPForbidden</class>
		<class>ch.systemsx.sybit.crkwebui.server.db.model.IPAllowed</class>
		<class>ch.systemsx.sybit.crkwebui.server.db.model.DataDownloadTracking</class>
		<validation-mode>NONE</validation-mode>
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
