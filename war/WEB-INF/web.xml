<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
	<!-- Servlets -->
	<servlet>
		<servlet-name>CrkService</servlet-name>
		<servlet-class>ch.systemsx.sybit.crkwebui.server.CrkWebServiceImpl</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>CrkService</servlet-name>
		<url-pattern>/crkwebui/crk</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>FileUploadService</servlet-name>
	    <servlet-class>ch.systemsx.sybit.crkwebui.server.FileUploadServlet</servlet-class>
	</servlet>

	<servlet-mapping>
	    <servlet-name>FileUploadService</servlet-name>
	    <url-pattern>/crkwebui/fileUpload</url-pattern>
 	</servlet-mapping>
 	
 	<servlet>
	    <servlet-name>FileDownloadService</servlet-name>
	    <servlet-class>ch.systemsx.sybit.crkwebui.server.FileDownloadServlet</servlet-class>
	</servlet>

	<servlet-mapping>
	    <servlet-name>FileDownloadService</servlet-name>
	    <url-pattern>/crkwebui/fileDownload</url-pattern>
 	</servlet-mapping>
  
 	<welcome-file-list>
		<welcome-file>Crkwebui.html</welcome-file>
	</welcome-file-list>
	
	<resource-ref>
	    <description>My DataSource Reference</description>
	    <res-ref-name>jdbc/DSTest</res-ref-name>
	    <res-type>javax.sql.DataSource</res-type>
    	<res-auth>Container</res-auth>
  	</resource-ref>

</web-app>
